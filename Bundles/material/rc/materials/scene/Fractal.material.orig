
//-----------------------------------------------------------------------------

vertex_program Fractal_VP glsl
{
  source Fractal_VP.glsl
}

//-----------------------------------------------------------------------------

fragment_program Fractal_FP glsl
{
  source Fractal_FP.glsl
}

//-----------------------------------------------------------------------------

material Fractal
{
    technique
    {
        pass
        {
            vertex_program_ref Fractal_VP
            {
                param_named_auto u_worldViewProj worldviewproj_matrix
            }

            fragment_program_ref Fractal_FP
            {
                param_named u_time float 1.0
            }
        }
    }
}
