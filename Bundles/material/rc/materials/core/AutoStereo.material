                param_named u_srcTextures4 int 4
        }
}

//---------------------------------------------------------------------------

material AutoStereo5
{
    technique
    {
        pass
        {
            cull_hardware none
            cull_software none

            depth_check off

            vertex_program_ref RenderQuad_VP
            {
            }

            fragment_program_ref AutoStereo5/Mix
            {
            }

            texture_unit 0
            {
                tex_address_mode clamp
                filtering none
            }
            texture_unit 1
            {
                tex_address_mode clamp
                filtering none
            }
            texture_unit 2
            {
                tex_address_mode clamp
                filtering none
            }
            texture_unit 3
            {
                tex_address_mode clamp
                filtering none
            }
            texture_unit 4
            {
                tex_address_mode clamp
                filtering none
            }
        }
    }
}

