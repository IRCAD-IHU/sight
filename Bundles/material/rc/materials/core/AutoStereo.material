
//---------------------------------------------------------------------------

fragment_program AutoStereo8/Mix glsl
{
        source AutoStereoMix_FP.glsl
        preprocessor_defines VIEWPOINTS=8

        default_params
        {
                param_named u_lobeOffset float 0.f
                param_named u_srcTextures0 int 0
                param_named u_srcTextures1 int 1
                param_named u_srcTextures2 int 2
                param_named u_srcTextures3 int 3
                param_named u_srcTextures4 int 4
                param_named u_srcTextures5 int 5
                param_named u_srcTextures6 int 6
                param_named u_srcTextures7 int 7
        }
}

//---------------------------------------------------------------------------

