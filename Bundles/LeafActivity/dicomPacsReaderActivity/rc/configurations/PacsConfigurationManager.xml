<extension implements="::fwServices::registry::AppConfig">
    <id>PacsConfigurationManager</id>
    <type>parameters</type>
    <parameters>
        <param name="GENERIC_UID" />
        <param name="PACS_CONFIGURATION" />
        <param name="ICON_PATH" />
        <param name="CLOSE_CONFIG_CHANNEL" default="DummyChannel" /><!-- defined by SConfigLauncher -->
    </parameters>
    <config>


        <object type="::fwData::Composite">

            <!-- MAIN FRAME -->
            <service uid="${GENERIC_UID}_pacsConfigurationManagerFrame" type="::fwGui::IFrameSrv" impl="::gui::frame::DefaultFrame" autoConnect="no">
                <window onclose="notify" />
                <gui>
                    <frame>
                        <name>Pacs Configuration Manager</name>
                        <icon>${ICON_PATH}</icon>
                        <!--<minSize width="400" height="750" /> -->
                        <style mode="STAY_ON_TOP" />
                    </frame>
                </gui>
                <registry>
                    <view sid="${GENERIC_UID}_mainView" start="yes" />
                </registry>
            </service>

            <service uid="${GENERIC_UID}_mainView" type="::gui::view::IView" impl="::gui::view::DefaultView" autoConnect="no">
                <gui>
                    <layout type="::fwGui::CardinalLayoutManager">
                        <view align="center" />
                    </layout>
                </gui>
                <registry>
                    <view sid="${GENERIC_UID}_pacsConfigurationEditor" start="yes" />
                </registry>
            </service>

            <item key="pacsConfiguration">
                <object type="::fwPacsIO::data::PacsConfiguration" uid="${PACS_CONFIGURATION}" src="ref">
                    <service uid="${GENERIC_UID}_pacsConfigurationEditor" impl="::ioPacs::SPacsConfigurationEditor" autoConnect="yes">
                    </service>

                </object>
            </item>

            <proxy channel="${CLOSE_CONFIG_CHANNEL}">
                <signal>${GENERIC_UID}_pacsConfigurationManagerFrame/closed</signal>
            </proxy>

            <!-- START AND STOP SERVICES -->
            <start uid="${GENERIC_UID}_pacsConfigurationManagerFrame" />

        </object>

    </config>
</extension>
