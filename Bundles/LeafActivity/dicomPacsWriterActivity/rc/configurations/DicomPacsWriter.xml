<extension implements="::fwServices::registry::AppConfig">
    <id>DicomPacsWriter</id>
    <parameters>
        <param name="WID_PARENT" />
        <param name="GENERIC_UID" />
        <param name="AS_UID" />
        <param name="APP_NAME" />
    </parameters>
    <config>

    <object type="::fwData::Composite">

        <service uid="${GENERIC_UID}_mainView" type="::gui::view::IView" impl="::gui::view::SDefaultView" autoConnect="no">
            <gui>
                <layout type="::fwGui::CardinalLayoutManager">
                    <view caption="Information" align="center" minWidth="200" />
                    <view caption="Preview" align="bottom" minHeight="200" />
                </layout>
                <toolBar />
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <toolBar sid="${GENERIC_UID}_toolBar" start="yes" />
                <view sid="${GENERIC_UID}_selector" start="yes" />
                <view wid="${GENERIC_UID}_preview" />
            </registry>
        </service>

        <service uid="${GENERIC_UID}_toolBar" type="::fwGui::IToolBarSrv" impl="::gui::aspect::SDefaultToolBar" autoConnect="no">
            <gui>
                <layout>
                    <menuItem name="Import" icon="@BUNDLE_PREFIX@/media_0-1/icons/Import.svg" />
                    <menuItem name="Edit pacs configuration" icon="@BUNDLE_PREFIX@/mediaExt_0-1/icons/Settings.svg" style="check" />
                    <menuItem name="Anonymize selected series" icon="@BUNDLE_PREFIX@/mediaExt_0-1/icons/icon-Anonymization.svg" />
                    <menuItem name="Push selected series to Pacs" icon="@BUNDLE_PREFIX@/mediaExt_0-1/icons/Push.svg" />
                </layout>
            </gui>
            <registry>
                <menuItem sid="${GENERIC_UID}_action_import" start="yes" />
                <menuItem sid="${GENERIC_UID}_action_editPacsConfiguration" start="yes" />
                <menuItem sid="${GENERIC_UID}_action_anonymize" start="yes" />
                <menuItem sid="${GENERIC_UID}_action_pushSeriesToPacs" start="yes" />
            </registry>
        </service>

        <service uid="${GENERIC_UID}_progressBarController" impl="::ioPacs::SProgressBarController" autoConnect="no" />

        <!-- PACS CONFIGURATION -->
        <item key="pacsConfiguration">
            <object type="::fwPacsIO::data::PacsConfiguration" uid="${GENERIC_UID}_pacsConfiguration">

                <service uid="${GENERIC_UID}_pacsConfigurationInitializer" impl="::ioPacs::SPacsConfigurationInitializer" autoConnect="yes">
                    <config
                        localApplicationTitle="${APP_NAME}"
                        pacsHostName="mypacs.mycompany.com"
                        pacsApplicationTitle="PACSNAME"
                        pacsApplicationPort="11112"
                        moveApplicationTitle="MoveApplicationTitle"
                        moveApplicationPort="11110"
                        retrieveMethod="GET"
                        preferenceKey="PACS_CONFIGURATION"
                        />
                </service>

                <service uid="${GENERIC_UID}_action_editPacsConfiguration" type="::fwGui::IActionSrv" impl="::gui::action::SConfigLauncher" autoConnect="yes">
                    <config>
                        <appConfig id="PacsConfigurationManager" >
                            <parameters>
                                <parameter replace="PACS_CONFIGURATION" by="${GENERIC_UID}_pacsConfiguration"  />
                                <parameter replace="ICON_PATH" by="@BUNDLE_PREFIX@/mediaExt_0-1/icons/Settings.svg"  />
                            </parameters>
                        </appConfig>
                    </config>
                </service>

            </object>
        </item>

        <!-- SERIES DB -->
        <item key="seriesDB">
            <object type="::fwMedData::SeriesDB" uid="${GENERIC_UID}_seriesDB">

                <service uid="${GENERIC_UID}_action_import" type="::fwGui::IActionSrv" impl="::uiIO::action::SSeriesDBMerger" autoConnect="no">
                    <IOSelectorSrvConfig name="IOSelectorServiceConfigVRRenderExtDicomSeriesDBReader" />
                </service>

                <service uid="${GENERIC_UID}_selector" impl="::uiMedData::editor::SSelector" autoConnect="yes">
                    <selectionId>${GENERIC_UID}_selections</selectionId>
                </service>

            </object>
        </item>

        <item key="selections">
            <object type="::fwData::Vector" uid="${GENERIC_UID}_selections">

                <!-- Preview -->
                <service uid="${GENERIC_UID}_viewer" type="::fwServices::IController" impl="::uiMedData::SSeriesViewer" autoConnect="yes">
                    <parentView>${GENERIC_UID}_preview</parentView>
                    <configs>
                        <config id="2DLocalPreviewConfig" type="::fwDicomData::DicomSeries" />
                    </configs>
                </service>

                <!-- Dicom Anonymization -->
                <service uid="${GENERIC_UID}_action_anonymize" impl="::gui::action::SSlotCaller" >
                    <slots>
                        <slot>${GENERIC_UID}_anonymizeController/update</slot>
                    </slots>
                </service>
                <service uid="${GENERIC_UID}_anonymizeController" impl="::ioGdcm::SDicomSeriesAnonymizer">
                    <config seriesDBUID="${GENERIC_UID}_seriesDB" />
                </service>

                <!-- Push series -->
                <service uid="${GENERIC_UID}_action_pushSeriesToPacs" impl="::gui::action::SSlotCaller" >
                    <slots>
                        <slot>${GENERIC_UID}_pushSeriesController/update</slot>
                    </slots>
                </service>
                <service uid="${GENERIC_UID}_pushSeriesController" impl="::ioPacs::SSeriesPusher">
                    <config pacsConfigurationUID="${GENERIC_UID}_pacsConfiguration" />
                </service>

            </object>
        </item>

        <connect>
            <signal>${GENERIC_UID}_pushSeriesController/progressed</signal>
            <slot>${GENERIC_UID}_progressBarController/updateProgress</slot>
        </connect>
        <connect>
            <signal>${GENERIC_UID}_pushSeriesController/startedProgress</signal>
            <slot>${GENERIC_UID}_progressBarController/startProgress</slot>
        </connect>
        <connect>
            <signal>${GENERIC_UID}_pushSeriesController/stoppedProgress</signal>
            <slot>${GENERIC_UID}_progressBarController/stopProgress</slot>
         </connect>

        <connect>
            <signal>${GENERIC_UID}_anonymizeController/jobCreated</signal>
            <slot>progress_statusbar/showJob</slot>
        </connect>

        <!-- START AND STOP SERVICES -->
        <start uid="${GENERIC_UID}_mainView" />
        <start uid="${GENERIC_UID}_viewer" />
        <start uid="${GENERIC_UID}_anonymizeController" />
        <start uid="${GENERIC_UID}_pushSeriesController" />
        <start uid="${GENERIC_UID}_progressBarController" />
        <start uid="${GENERIC_UID}_pacsConfigurationInitializer" />

        <update uid="${GENERIC_UID}_pacsConfigurationInitializer" />

    </object>

    </config>
</extension>
