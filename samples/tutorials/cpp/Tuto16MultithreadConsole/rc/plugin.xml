<plugin id="Tuto16MultithreadConsole" class="::Tuto16MultithreadConsole::Plugin" version="@PROJECT_VERSION@" >

    <library name="Tuto16MultithreadConsole" />

    <requirement id="servicesReg" />
    <requirement id="console" />

    <extension implements="::fwServices::registry::ServiceFactory" >
        <type>::fwServices::IController</type>
        <service>::Tuto16MultithreadConsole::SReadArray</service>
        <object>::fwData::Array</object>
    </extension>

    <extension implements="::fwServices::registry::ServiceFactory" >
        <type>::fwServices::IController</type>
        <service>::Tuto16MultithreadConsole::SShowArray</service>
        <object>::fwData::Array</object>
    </extension>

    <extension implements="::fwServices::registry::ServiceFactory" >
        <type>::fwServices::IController</type>
        <service>::Tuto16MultithreadConsole::SIncrementArray</service>
        <object>::fwData::Array</object>
    </extension>

    <extension implements="::fwServices::registry::AppConfig" >
        <id>Tuto16MultithreadConsole_AppCfg</id>
        <parameters>
        </parameters>
        <config>

            <!-- ******************************* Objects declaration ****************************** -->

            <object uid="array" type="::fwData::Array" />

            <!-- ******************************* Services ***************************************** -->

            <!-- Simulate the reading of an array of integers. It simply fills 10 values from 0 to 9. -->
            <service uid="readArraySrv" type="::Tuto16MultithreadConsole::SReadArray" worker="worker1" >
                <inout key="array" uid="array" />
            </service>

            <!-- Increment each element of the array every 500ms. -->
            <service uid="incrementArraySrv" type="::Tuto16MultithreadConsole::SIncrementArray" worker="worker2" >
                <inout key="array" uid="array" />
            </service>

            <!-- Display the content of the array. -->
            <service uid="showArraySrv" type="::Tuto16MultithreadConsole::SShowArray" worker="worker3" >
                <in key="array" uid="array" />
            </service>

            <!-- ******************************* Connections ***************************************** -->

            <!-- Start the increment of the array when it is read, show the content every time the array is modified -->
            <connect>
                <signal>array/modified</signal>
                <slot>incrementArraySrv/startTimer</slot>
                <slot>showArraySrv/update</slot>
            </connect>

            <!-- ******************************* Start services ***************************************** -->

            <start uid="readArraySrv" />
            <start uid="incrementArraySrv" />
            <start uid="showArraySrv" />

            <!-- ******************************* Update services ***************************************** -->

            <!-- Read the array -->
            <update uid="readArraySrv" />

        </config>
    </extension>

</plugin>
