<extension implements="::fwServices::registry::AppConfig2">
    <id>VisuConfig</id>
    <parameters>
        <param name="mesh" />
        <param name="WID_PARENT" />
    </parameters>
    <config>
        <object uid="${mesh}" type="::fwData::Mesh" src="ref" />
        <!-- *************************** Begin generic scene *************************** -->

        <service uid="genericScene" type="::fwRenderVTK::SRender" autoConnect="yes">
            <scene>
                <!-- Renderer -->
                <renderer id="default" background="0.0" />
                <adaptor uid="meshAdaptor" />
            </scene>
            <registry>
                <parent wid="${WID_PARENT}" />
            </registry>
        </service>

        <!-- Mesh adaptor -->
        <service uid="meshAdaptor" type="::visuVTKAdaptor::SMesh" autoConnect="yes">
            <in key="mesh" uid="${mesh}" />
            <config renderer="default" picker="" />
        </service>

        <!-- *************************** End generic scene *************************** -->

        <start uid="genericScene" />
        <!-- VTK scene 'genericScene' -->
        <start uid="meshAdaptor" />
    </config>
</extension>
