<plugin id="dicomxplorer" version="@PROJECT_VERSION@">

    <requirement id="module_service" />
    <requirement id="module_io_atoms" />
    <requirement id="module_activity" />
    <requirement id="module_ui_base" />

    <xi:include href="configurations/VRRenderBase.xml" xmlns:xi="http://www.w3.org/2003/XInclude" />
    <xi:include href="configurations/sdb.xml" xmlns:xi="http://www.w3.org/2003/XInclude" />

    <extension implements="::sight::service::registry::AppConfigParameters">
        <id>VRRenderAppBase</id>
        <parameters>
            <param name="appName" value="DicomXplorer 0.9.7" />
            <param name="appIconPath" value="dicomxplorer-@PROJECT_VERSION@/vrrender.ico" />
            <param name="appVersion" value="@PROJECT_VERSION@" />
        </parameters>
    </extension>

    <extension implements="::sight::activity::registry::Activity">
        <id>SDBVRRender</id>
        <title>SDB</title>
        <desc>Series Selector</desc>
        <icon>media-0.1/icons/selector.svg</icon>
        <requirements />
        <appConfig id="SDBVRRender">
            <parameters />
        </appConfig>
    </extension>

</plugin>
