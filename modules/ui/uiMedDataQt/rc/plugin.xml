<plugin id="uiMedDataQt" class="::uiMedDataQt::Plugin" version="@PROJECT_VERSION@">
    <library name="uiMedDataQt" />

    <requirement id="::sight::modules::services" />

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::editor::IEditor</type>
        <service>::uiMedDataQt::editor::SSelector</service>
        <object>::sight::data::SeriesDB</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::editor::IEditor</type>
        <service>::uiMedDataQt::editor::SSeries</service>
        <object>::sight::data::Vector</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::services::IController</type>
        <service>::uiMedDataQt::SSeriesViewer</service>
        <object>::sight::data::Vector</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::IActionSrv</type>
        <service>::uiMedDataQt::action::SExportSeries</service>
        <object>::sight::data::SeriesDB</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::IActionSrv</type>
        <service>::uiMedDataQt::action::SInitNewSeries</service>
        <object>::sight::data::SeriesDB</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::editor::IEditor</type>
        <service>::uiMedDataQt::editor::SModelSeriesList</service>
        <object>::sight::data::ModelSeries</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::editor::IEditor</type>
        <service>::uiMedDataQt::editor::SOrganTransformation</service>
        <object>::sight::data::ModelSeries</object>
    </extension>

    <extension implements="::sight::services::registry::ServiceFactory">
        <type>::sight::gui::editor::IEditor</type>
        <service>::uiMedDataQt::editor::SActivityWizard</service>
        <object>::sight::data::SeriesDB</object>
    </extension>

    <extension implements="::sight::services::registry::AppConfig">
        <id>ActivityCreatorConfig</id>
        <parameters>
            <param name="GENERIC_UID" />
            <param name="WID_PARENT" />
            <param name="SERIESDB" />
            <param name="objectID" />
        </parameters>
        <desc>Configuration to update the given activity series.</desc>
        <config>
            <object uid="${SERIESDB}" type="::sight::data::SeriesDB" src="ref" />
            <object uid="${objectID}" type="::sight::data::ActivitySeries" src="ref" />

            <service uid="activityCreator" type="::uiMedDataQt::editor::SActivityWizard">
                <inout key="seriesDB" uid="${SERIESDB}" />
                <inout key="activitySeries" uid="${objectID}" />
                <ioSelectorConfig>SDBReaderIOSelectorConfig</ioSelectorConfig>
                <icons>
                    <icon type="::sight::data::ImageSeries" icon="media-0.1/icons/ImageSeries.svg" />
                    <icon type="::sight::data::ModelSeries" icon="media-0.1/icons/ModelSeries.svg" />
                </icons>
                <registry>
                    <parent wid="${WID_PARENT}" />
                </registry>
            </service>

            <start uid="activityCreator" />
            <update uid="activityCreator" />
        </config>
    </extension>
</plugin>
