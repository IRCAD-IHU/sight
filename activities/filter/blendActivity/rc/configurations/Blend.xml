<extension implements="::sight::service::registry::AppConfig">
    <id>Blend</id>
    <parameters>
        <param name="WID_PARENT" />
        <param name="frontImageUid" />
        <param name="backgroundImageUid" />
    </parameters>

    <config>

        <object uid="${backgroundImageUid}" type="::sight::data::Image" src="ref" />
        <object uid="${frontImageUid}" type="::sight::data::Image" src="ref" />

        <object uid="tfBackgroundImage" type="::sight::data::TransferFunction" src="deferred" />
        <object uid="tfFrontImage" type="::sight::data::TransferFunction" src="deferred" />

        <service uid="mainView" type="::sight::modules::ui::base::view::SDefaultView">
            <gui>
                <layout type="::sight::ui::base::TabLayoutManager">
                    <view caption="Blend" selected="yes" />
                    <view caption="Background image" />
                    <view caption="Front image" />
                </layout>
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <view wid="blendView" />
                <view wid="bgImageView" />
                <view wid="frontImageView" />
            </registry>
        </service>

        <service uid="medicalImageFrontSrv" type="::sight::modules::data::MedicalImageSrv">
            <inout key="image" uid="${frontImageUid}" />
        </service>

        <service uid="medicalImageBgSrv" type="::sight::modules::data::MedicalImageSrv">
            <inout key="image" uid="${backgroundImageUid}" />
        </service>

        <service uid="blendViewCtrl" type="::sight::service::SConfigController">
            <state active="true" />
            <inout key="backgroundImageUid" uid="${backgroundImageUid}" />
            <inout key="frontImageUid" uid="${frontImageUid}" />
            <appConfig id="ImageMix" />
            <parameter replace="WID_PARENT" by="blendView" />
            <parameter replace="tfBackgroundImage" by="tfBackgroundImage" />
            <parameter replace="tfFrontImage" by="tfFrontImage" />
        </service>

        <service uid="bgTFViewCtrl" type="::sight::service::SConfigController">
            <inout key="image" uid="${backgroundImageUid}" />
            <appConfig id="TransferFunctionEditor" />
            <parameter replace="WID_PARENT" by="bgImageView" />
            <parameter replace="transferFunction" by="tfBackgroundImage" />
        </service>

        <service uid="frontTFViewCtrl" type="::sight::service::SConfigController">
            <inout key="image" uid="${frontImageUid}" />
            <appConfig id="TransferFunctionEditor" />
            <parameter replace="WID_PARENT" by="frontImageView" />
            <parameter replace="transferFunction" by="tfFrontImage" />
        </service>

        <!-- START AND STOP SERVICES -->
        <start uid="mainView" />
        <start uid="medicalImageFrontSrv" />
        <start uid="medicalImageBgSrv" />
        <start uid="blendViewCtrl" />
        <start uid="bgTFViewCtrl" />
        <start uid="frontTFViewCtrl" />

    </config>
</extension>

