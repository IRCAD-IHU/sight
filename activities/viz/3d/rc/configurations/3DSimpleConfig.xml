<extension implements="sight::service::extension::AppConfig">
    <id>3DSimpleConfig</id>
    <parameters>
        <param name="WID_PARENT" />
        <param name="modelID" />
    </parameters>
    <config>
        <object uid="${modelID}" type="sight::data::Mesh" src="ref" />
        <service uid="mainview" type="sight::module::ui::base::SView">
            <gui>
                <layout type="sight::ui::base::CardinalLayoutManager">
                    <view align="center" />
                    <view align="bottom" minWidth="200" minHeight="30" resizable="no" />
                </layout>
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <view sid="gs" start="yes" />
            </registry>
        </service>

        <!-- *************************** Begin generic scene *************************** -->

        <service uid="gs" type="sight::viz::scene3d::SRender" >
            <scene>
                <background topColor="#36393E" bottomColor="#36393E" />
                
                <layer id="default" order="1" transparency="HybridTransparency" numPeels="4" />

                <adaptor uid="cameraInteractorAdaptor" />
                <adaptor uid="seriesAdaptor" />

            </scene>
        </service>

        <service uid="cameraInteractorAdaptor" type="sight::module::viz::scene3d::adaptor::STrackballCamera" autoConnect="yes" >
            <config layer="default" priority="0" orientation="${orientation}" />
        </service>

        <service uid="seriesAdaptor" type="sight::module::viz::scene3d::adaptor::SModelSeries" autoConnect="yes">
            <inout key="model" uid="${modelID}" />
            <config layer="default" picker="picker" autoresetcamera="yes"/>
        </service>

        <!-- *************************** End generic scene *************************** -->

        <service uid="modelDumpLocker" type="sight::module::memory::LockDumpSrv">
            <inout key="target" uid="${modelID}" />
        </service>

        <start uid="modelDumpLocker" />
        <start uid="mainview" />

        <!-- gs adaptors -->
        <start uid="cameraInteractorAdaptor" />
        <start uid="seriesAdaptor" />
    </config>
</extension>
