<extension implements="::fwServices::registry::AppConfig">
    <id>OgreHistogramManager</id>
    <parameters>
        <param name="WID_PARENT" />
        <param name="ICON_PATH" />
        <param name="imageUID" />
        <param name="maskUID" />
        <param name="TFSelections" />
        <param name="selectedTFKey" />
    </parameters>

    <config>

        <!-- ******************************* Objects declaration ****************************** -->

        <object uid="${imageUID}"     type="::fwData::Image"     src="ref" />
        <object uid="${maskUID}"      type="::fwData::Image"     src="ref" />
        <object uid="${TFSelections}" type="::fwData::Composite" src="ref" />

        <object uid="TFPool" type="::fwData::Composite" />
        <object uid="TF" type="::fwData::TransferFunction" src="deferred" />

        <object uid="histogram" type="::fwData::Histogram" />

        <!-- ******************************* UI declaration *********************************** -->

        <service uid="histogramView" type="::gui::view::SDefaultView" >
            <gui>
                <layout type="::fwGui::LineLayoutManager">
                    <orientation value="vertical" />
                    <view proportion="0" minHeight="30" />
                    <view proportion="1" />
                    <view proportion="0" />
                    <view proportion="0" />
                </layout>
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <view sid="tfm" start="yes" />
                <view wid="tfScene" />
                <view sid="windowLevel" start="no" />
                <view sid="transparencyEditor" start="yes" />
            </registry>
        </service>

        <!-- ************************************* Services ************************************ -->

        <service uid="addTFinSelection" type="::ctrlSelection::SManage">
           <inout key="object" uid="TF" />
           <inout key="composite" uid="${TFSelections}" />
           <compositeKey>${selectedTFKey}</compositeKey>
        </service>

        <service uid="tfWidget" type="::fwServices::SConfigController">
            <appConfig id="TransferFunctionWidget" />
            <inout key="image" uid="${imageUID}"/>
            <inout key="histogram" uid="histogram"/>
            <inout key="transferFunction" uid="TF" />
            <parameter replace="WID_PARENT" uid="tfScene"/>
        </service>

        <service uid="windowLevel" type="::uiImageQt::WindowLevel" autoConnect="yes">
            <inout key="image" uid="${imageUID}" />
            <inout key="tf" uid="TF" />
        </service>

        <service uid="transparencyEditor" type="::uiImageQt::ImageTransparency" autoConnect="yes" >
            <inout key="image" uid="${imageUID}" />
        </service>

        <service uid="tfm" type="::uiTF::TransferFunctionEditor" >
            <inout key="tfPool" uid="TFPool" autoConnect="yes"/>
            <out key="tf" uid="TF" />
        </service>

        <service uid="computeHistogram" type="::scene2D::processing::SComputeHistogram" autoConnect="yes" worker="COMPUTING_THREAD">
            <in key="image" uid="${imageUID}" />
            <inout key="histogram" uid="histogram" />
            <binsWidth>5.0</binsWidth>
        </service>

        <!-- ********************************** Connections ********************************** -->

        <!-- add or swap the TF in the composite when it is present in the config (the service is started when the TF exists) -->
        <connect>
            <signal>addTFinSelection/started</signal>
            <slot>addTFinSelection/addOrSwap</slot>
        </connect>

        <!-- ************************************* Start ************************************* -->

        <!-- Start/Stop services -->
        <start uid="histogramView" />
        <start uid="tfWidget" />
        <start uid="computeHistogram" />
        <start uid="addTFinSelection" />
        <!-- deferred -->
        <start uid="windowLevel" />

    </config>
</extension>
