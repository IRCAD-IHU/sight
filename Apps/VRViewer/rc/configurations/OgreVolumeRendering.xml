
<extension implements="::fwServices::registry::AppConfig2">
    <id>OgreVolumeRendering</id>
    <parameters>
        <param name="WID_PARENT" />
        <param name="SETTINGS_WID_PARENT" />
        <param name="TOOLBAR_WID_PARENT" />
        <param name="image" />
        <param name="TFSelections" />
        <param name="cameraTF" />
        <param name="VRAdaptor" />
        <param name="clippingMatrix" />
    </parameters>
    <config>

        <!-- ******************************* Objects declaration ****************************** -->

        <object uid="${image}"  type="::fwData::Image" src="ref" />
        <object uid="${TFSelections}" type="::fwData::Composite" src="ref" />
        <object uid="${cameraTF}" type="::fwData::TransformationMatrix3D" src="ref" />
        <object uid="${clippingMatrix}" type="::fwData::TransformationMatrix3D" src="ref" />

        <object uid="samplingSliderValue" type="::fwData::Integer" />
        <object uid="focalLengthIntVal" type="::fwData::Integer" />

        <object uid="vrWidgetsValue" type="::fwData::Boolean" />
        <object uid="collimation"  type="::fwData::Float" />

        <!-- ******************************* UI declaration *********************************** -->

        <service uid="OgreVolumeRendering" type="::gui::view::SDefaultView" autoConnect="no">
            <gui>
                <layout type="::fwGui::LineLayoutManager">
                    <orientation value="vertical" />
                    <view proportion="1" />
                </layout>
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <view sid="volumeRenderingScene" start="yes" />
            </registry>
        </service>

        <service uid="volumeRenderingInteractor" type="::gui::view::SDefaultView" autoConnect="no">
            <gui>
                <layout type="::fwGui::LineLayoutManager">
                    <orientation value="vertical" />
                    <view proportion="0" />
                </layout>
            </gui>
            <registry>
                <parent wid="${SETTINGS_WID_PARENT}" />
                <view sid="volumeRenderingEditor" start="yes" />
            </registry>
        </service>

        <!-- ******************************* Services ***************************************** -->

        <service uid="volumeRenderingScene" type="::fwRenderOgre::SRender" autoConnect="yes">
            <scene fullscreen="yes" />
            <background topColor="#000000" bottomColor="#000000" topScale="0.7" bottomScale="1.0" />

            <layer id="default" depth="1" stereoMode="AutoStereo8"/>

            <adaptor uid="interactorAdaptor" start="yes" />
            <adaptor uid="cameraAdaptor" start="yes" />
            <adaptor uid="${VRAdaptor}" start="yes" />
            <adaptor uid="compositorAdaptor" start="yes" />
        </service>

        <service uid="interactorAdaptor" type="::visuOgreAdaptor::SInteractorStyle" >
            <config layer="default" style="VR" />
        </service>

        <service uid="cameraAdaptor" type="::visuOgreAdaptor::SCamera" autoConnect="yes" >
            <in key="transform" uid="${cameraTF}" />
            <config layer="default" />
        </service>

        <service uid="${VRAdaptor}" type="::visuOgreAdaptor::SVolumeRender" >
            <in key="image" uid="${image}" autoConnect="yes" />
            <inout key="TF" uid="${TFSelections}" />
            <inout key="clippingMatrix" uid="${clippingMatrix}" />
            <config layer="default" widgets="no" preintegration="no" mode="raytracing" selectedTFKey="SelectedTF" />
        </service>

        <service uid="compositorAdaptor" type="::visuOgreAdaptor::SCompositorParameter">
            <inout key="param" uid="collimation" />
            <config layer="default" compositorName="AutoStereo8" parameter="u_collimation" shaderType="fragment" />
        </service>

        <service uid="volumeRenderingEditor" type="::guiQt::editor::SParameters" autoConnect="no">
            <parameters>
                <param type="int" name="Samples" key="sampling" defaultValue="512" min="128" max="512" />
                <param type="double" name="Collimation" key="u_collimation" defaultValue="0" min="-20" max="20" />
            </parameters>
        </service>

        <service uid="toggleVrWidgetsBtn" type="::guiQt::editor::SSignalButton" autoConnect="no">
            <inout key="vrWidgets" uid="vrWidgetsValue" />
            <config>
               <checkable>true</checkable>
               <text>Widgets</text>
               <checked>false</checked>
            </config>
        </service>

        <service uid="mode3DSelector" type="::uiVisuOgre::SStereoSelector" >
            <registry>
                <parent wid="${TOOLBAR_WID_PARENT}" />
            </registry>
        </service>

        <connect>
            <signal>volumeRenderingEditor/doubleChanged</signal>
            <slot>compositorAdaptor/setDoubleParameter</slot>
        </connect>

        <connect>
            <signal>volumeRenderingEditor/intChanged</signal>
            <slot>${VRAdaptor}/setIntParameter</slot>
        </connect>

        <start uid="OgreVolumeRendering" />
        <start uid="volumeRenderingInteractor" />
        <start uid="mode3DSelector" />

    </config>
</extension>
