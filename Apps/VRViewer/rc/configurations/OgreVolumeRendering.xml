
<extension implements="::fwServices::registry::AppConfig2">
    <id>OgreVolumeRendering</id>
    <parameters>
        <param name="WID_PARENT" />
        <param name="SETTINGS_WID_PARENT" />
        <param name="image" />
        <param name="TFSelections" />
        <param name="VRAdaptor" />
    </parameters>
    <config>

        <!-- ******************************* Objects declaration ****************************** -->

        <object uid="${image}"  type="::fwData::Image" src="ref" />
        <object uid="${TFSelections}" type="::fwData::Composite" src="ref" />

        <object uid="samplingSliderValue" type="::fwData::Integer" />
        <object uid="focalLengthIntVal" type="::fwData::Integer" />

        <object uid="vrWidgetsValue" type="::fwData::Boolean" />

        <!-- ******************************* UI declaration *********************************** -->

        <service uid="OgreVolumeRendering" type="::gui::view::SDefaultView" autoConnect="no">
            <gui>
                <layout type="::fwGui::LineLayoutManager">
                    <orientation value="vertical" />
                    <view proportion="1" />
                </layout>
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <view sid="volumeRenderingScene" start="yes" />
            </registry>
        </service>

        <service uid="volumeRenderingInteractor" type="::gui::view::SDefaultView" autoConnect="no">
            <gui>
                <layout type="::fwGui::LineLayoutManager">
                    <orientation value="vertical" />
                    <view proportion="0" />
                    <view proportion="0" />
                </layout>
            </gui>
            <registry>
                <parent wid="${SETTINGS_WID_PARENT}" />
                <view sid="samplingSlider" start="yes" />
                <view sid="focalLengthSlider" start="yes" />
            </registry>
        </service>

        <!-- ******************************* Services ***************************************** -->

        <service uid="volumeRenderingScene" type="::fwRenderOgre::SRender" autoConnect="yes">
            <in key="image" uid="${image}" />
            <inout key="TFSelections" uid="${TFSelections}" />
            <scene overlay="true" fullscreen="yes">

                <background topColor="#DDDDDD" bottomColor="#43958D" topScale="0.7" bottomScale="1.0" />

                <renderer id="default" layer="1" compositors="Default" />

                <adaptor id="interactorAdaptor" class="::visuOgreAdaptor::SInteractorStyle" objectId="self">
                    <config renderer="default" style="VR" />
                </adaptor>

                <adaptor id="volumeRender" class="::visuOgreAdaptor::SVolumeRender" objectId="image" uid="${VRAdaptor}">
                    <config renderer="default" widgets="no" preintegration="no" mode="raytracing" selectedTFKey="SelectedTF" tfSelectionFwID="TFSelections" />
                </adaptor>

                <connect>
                    <signal>samplingSlider/valueChanged</signal>
                    <slot>${VRAdaptor}/updateSampling</slot>
                </connect>

                <connect>
                    <signal>focalLengthSlider/valueChanged</signal>
                    <slot>${VRAdaptor}/setFocalDistance</slot>
                </connect>

            </scene>
        </service>

        <service uid="samplingSlider" type="::guiQt::editor::SSlider" autoConnect="yes">
            <inout key="sampling" uid="samplingSliderValue" />
            <defaultValue>512</defaultValue>
            <value>512</value>
            <text>Samples</text>
            <range>
                <min>256</min>
                <max>512</max>
            </range>
        </service>

        <!-- The value normally goes from 0. to 1. but we have to use an integer slider since float type is not supported yet -->
        <service uid="focalLengthSlider" type="::guiQt::editor::SSlider" autoConnect="no">
            <inout key="focalLength" uid="focalLengthIntVal" />
            <defaultValue>50</defaultValue>
            <value>0</value>
            <text>Focal length</text>
            <stepSize>1</stepSize>
            <range>
                <min>0</min>
                <max>100</max>
            </range>
        </service>

        <service uid="toggleVrWidgetsBtn" type="::guiQt::editor::SSignalButton" autoConnect="no">
            <inout key="vrWidgets" uid="vrWidgetsValue" />
            <config>
               <checkable>true</checkable>
               <text>Widgets</text>
               <checked>false</checked>
            </config>
        </service>

        <start uid="OgreVolumeRendering" />
        <start uid="volumeRenderingInteractor" />

    </config>
</extension>
