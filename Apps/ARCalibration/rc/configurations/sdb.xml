<extension implements="::fwServices::registry::AppConfig2">
    <id>SDBARCalibration</id>
    <parameters>
        <param name="SERIESDB" />
        <param name="WID_PARENT" />
        <param name="DYNAMICVIEW_CHANNEL" default="channel" />
        <param name="ICON_PATH" />
    </parameters>
    <config>

        <!-- *************************** Objects declaration **************************** -->

        <object uid="${SERIESDB}" type="::fwMedData::SeriesDB" src="ref"/>
        <object uid="selections" type="::fwData::Vector" />

        <!-- *************************** Layouts declaration **************************** -->

        <service uid="mainview" type="::gui::view::SDefaultView" autoConnect="yes">
            <gui>
                <layout type="::fwGui::CardinalLayoutManager">
                    <view caption="Information" align="center" minWidth="200" />
                </layout>
                <toolBar />
            </gui>
            <registry>
                <parent wid="${WID_PARENT}" />
                <toolBar sid="toolBar" start="yes" />
                <view sid="selector" start="yes" />
            </registry>
        </service>

        <service uid="toolBar" type="::gui::aspect::SDefaultToolBar">
            <gui>
                <layout>
                    <menuItem name="Launch activity" icon="@BUNDLE_PREFIX@/media_0-1/icons/Launch_activity.svg" />
                    <separator />
                    <menuItem name="Calibration activity" icon="@BUNDLE_PREFIX@/arMedia_0-1/icons/calibrationActivity.svg" />
                    <menuItem name="Export CameraSeries calibration" icon="@BUNDLE_PREFIX@/media_0-1/icons/Export.svg" />
                    <separator/>
                    <menuItem name="Tools Calibration activity" icon="@BUNDLE_PREFIX@/arMedia_0-1/icons/calibrationActivity.svg"/>
                </layout>
            </gui>
            <registry>
                <menuItem sid="action_newActivity" start="yes" />
                <menuItem sid="action_calibrationActivity" start="yes" />
                <menuItem sid="action_exportCameraActivity" start="yes" />
                <menuItem sid="action_toolsCalibrationActivity" start="yes" />
            </registry>
        </service>

        <service uid="selector" type="::uiMedData::editor::SSelector" autoConnect="yes">
            <inout key="seriesDB" uid="${SERIESDB}" />
            <inout key="selection" uid="selections" />
            <selectionId>selections</selectionId>
            <icons>
                <icon series="::arData::CameraSeries" icon="@BUNDLE_PREFIX@/arMedia_0-1/icons/calibrationActivity.svg" />
            </icons>
        </service>

        <service uid="action_newActivity" type="::activities::action::SActivityLauncher" autoConnect="yes">
            <inout key="selection" uid="selections" />
            <config>
                <parameters>
                    <parameter replace="SERIESDB" uid="${SERIESDB}" />
                    <parameter replace="ICON_PATH" by="${ICON_PATH}" />
                </parameters>
            </config>
        </service>

        <service uid="action_calibrationActivity" type="::activities::action::SActivityLauncher" autoConnect="yes">
            <inout key="selection" uid="selections" />
            <config>
                <parameters>
                    <parameter replace="SERIESDB" uid="seriesDB" />
                    <parameter replace="ICON_PATH" by="${ICON_PATH}" />
                </parameters>
                <filter>
                    <mode>include</mode>
                    <id>Calibration</id>
                </filter>
            </config>
        </service>
        <service uid="action_exportCameraActivity" type="::activities::action::SActivityLauncher" autoConnect="yes">
            <inout key="selection" uid="selections" />
            <config>
                <mode>immediate</mode>
                <parameters>
                    <parameter replace="SERIESDB" uid="seriesDB" />
                    <parameter replace="ICON_PATH" by="${ICON_PATH}" />
                </parameters>
                <filter>
                    <mode>include</mode>
                    <id>CameraSeriesExport</id>
                </filter>
            </config>
        </service>

        <service uid="action_toolsCalibrationActivity" type="::activities::action::SActivityLauncher" autoConnect="yes">
            <inout key="selection" uid="selections" />
            <config>
                <parameters>
                    <parameter replace="SERIESDB" uid="seriesDB" />
                    <parameter replace="ICON_PATH" by="${ICON_PATH}" />
                </parameters>
                <filter>
                    <mode>include</mode>
                    <id>toolsCalibration</id>
                </filter>
            </config>
        </service>

        <connect>
            <signal>selector/seriesDoubleClicked</signal>
            <slot>action_newActivity/launchSeries</slot>
        </connect>

        <connect channel="${DYNAMICVIEW_CHANNEL}">
            <signal>action_newActivity/activityLaunched</signal>
            <signal>action_calibrationActivity/activityLaunched</signal>
            <signal>action_toolsCalibrationActivity/activityLaunched</signal>
        </connect>

        <start uid="mainview" />

    </config>
</extension>
